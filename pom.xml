		<dependency>
			<groupId>org.apache.axis2</groupId><artifactId>axis2-webapp</artifactId>
			<type>war</type>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>com.aoindustries</groupId><artifactId>aoserv-webservices</artifactId>
			<type>aar</type>
			<scope>runtime</scope>
		</dependency>
	</dependencies>
</project>
